/* pages/allgame/allgame.wxss */

.images-box {
  width: 100%;
  height: 360rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.hr {
  width: 100%;
  height: 15rpx;
  background-color: #dbdbdb;
  position: absolute;
}

.clean {
  clear: both;
  overflow: hidden;
}

.float {
  float: left;
  margin: 20rpx;
  position: relative;
}

.titleImage {
  display: flex;
  flex-direction: row;
  margin: 30rpx;
}

.item_img {
  width: 50rpx;
  height: 50rpx;
}

.title {
  width: 150rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  margin-left: 15rpx;
  font-weight: bolder;
}

.content_column {
  display: flex;
  flex-direction: column;
  /* flex-wrap: nowrap; */
}

.lists_img {
  border-radius: 15rpx;
  width: 150rpx;
  height: 150rpx;
}

.content_title {
  margin: 15rpx 0 10rpx 0;
  font-size: 25.5rpx;
  text-align: center;
}

.xcxList {
  height: 570rpx;
}

.listsitem_image {
  margin: 20rpx 20rpx 10rpx 30rpx;
  float: left;
}

.jumpName {
  margin-top: 36rpx;
  margin-bottom: 36rpx;
  font-size: 36rpx;
}

.clickNub {
  font-size: 30rpx;
  color: red;
}

